$x	scalar
@x	array
%x	hasg (associative array)

arrays: qw( some text here )
	('some', 'text', 'here')



$_	default scalar
@_	default array

scalar = single value
array  = multiple values


seek( handle, offset, method )

	methods
	  0 from beginning
	  1 # of positions from current cursor location
	  2 from the end


